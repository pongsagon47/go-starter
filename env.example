# Application Configuration
APP_NAME=flex-service
ENV=development
TIMEZONE=Asia/Bangkok

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
SERVER_READ_TIMEOUT=30s
SERVER_WRITE_TIMEOUT=30s

# Database Configuration
# Supported types: mysql, postgresql, sqlite
DB_DRIVER=mysql

# MySQL Configuration (used when DB_DRIVER=mysql)
DB_MYSQL_HOST=localhost
DB_MYSQL_PORT=3306
DB_MYSQL_USER=root
DB_MYSQL_PASSWORD=password
DB_MYSQL_NAME=flex_service
DB_MYSQL_LOG_LEVEL=warn
DB_MYSQL_MAX_IDLE_CONNS=10
DB_MYSQL_MAX_OPEN_CONNS=100
DB_MYSQL_CONN_MAX_LIFETIME=60
DB_MYSQL_CHARSET=utf8mb4
DB_MYSQL_PARSE_TIME=true
DB_MYSQL_LOC=Local
# SSL Configuration (optional)
DB_MYSQL_CLIENT_CERT=
DB_MYSQL_CLIENT_KEY=
DB_MYSQL_CA=

# PostgreSQL Configuration (used when DB_DRIVER=postgresql)
DB_POSTGRES_HOST=localhost
DB_POSTGRES_PORT=5432
DB_POSTGRES_USER=postgres
DB_POSTGRES_PASSWORD=password
DB_POSTGRES_NAME=flex_service
DB_POSTGRES_LOG_LEVEL=warn
DB_POSTGRES_MAX_IDLE_CONNS=10
DB_POSTGRES_MAX_OPEN_CONNS=100
DB_POSTGRES_CONN_MAX_LIFETIME=60
DB_POSTGRES_SSL_MODE=disable
DB_POSTGRES_TIMEZONE=UTC
DB_POSTGRES_CONNECT_TIMEOUT=30
DB_POSTGRES_STATEMENT_TIMEOUT=0

# SQLite Configuration (used when DB_DRIVER=sqlite)
DB_SQLITE_FILE_PATH=./database.db
DB_SQLITE_LOG_LEVEL=warn
DB_SQLITE_MAX_IDLE_CONNS=1
DB_SQLITE_MAX_OPEN_CONNS=1
DB_SQLITE_CONN_MAX_LIFETIME=60
DB_SQLITE_IN_MEMORY=false
DB_SQLITE_FOREIGN_KEYS=true
DB_SQLITE_JOURNAL=WAL
DB_SQLITE_SYNCHRONOUS=NORMAL
DB_SQLITE_CACHE_SIZE=10000
DB_SQLITE_TEMP_STORE=MEMORY

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION_HOURS=24
JWT_REFRESH_EXPIRATION_HOURS=720
JWT_ALGORITHM=HS256

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM=
SMTP_FROM_NAME=flex-service
EMAIL_TEMPLATE_DIR=./templates
EMAIL_MAX_RETRIES=3
EMAIL_RETRY_DELAY=1s
EMAIL_INSECURE_SKIP_VERIFY=false

# Security Configuration
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_RETRIES=3
REDIS_POOL_SIZE=10
REDIS_MIN_IDLE_CONNS=5
REDIS_DIAL_TIMEOUT=5s
REDIS_READ_TIMEOUT=3s
REDIS_WRITE_TIMEOUT=3s
